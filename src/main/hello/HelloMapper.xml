    <insert id="insertCurrency" parameterType="com.the9.qjrun.po.account.Currency" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
          insert into currency (Currency1,Currency2,Currency3,Currency4,Currency5) values (#{currency1},#{currency2},#{currency3},#{currency4},#{currency5})
        ]]>
    </insert>
    <resultMap id="currencyResultMap" type="com.the9.qjrun.po.account.Currency">
        <id property="id" column="pk_id" />
        <result property="currency1" column="currency1"/>
        <result property="currency2" column="currency2"/>
        <result property="currency3" column="currency3"/>
        <result property="currency4" column="currency4"/>
        <result property="currency5" column="currency5"/>
    </resultMap>
    <select id="getCurrenciesByList" parameterType="int" resultMap="currencyResultMap">
        <![CDATA[
          select pk_id,currency1,currency2,currency3,currency4,currency5 from currency
        ]]>
    </select>

    <update id="updateCurrencyById" parameterType="com.the9.qjrun.po.account.Currency" >

          update currency
        <set>
            <if test="currency1 != null">
                currency1 = #{currency1,jdbcType=INTEGER}
            </if>
        </set>
                where pk_id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteCurrencyById" parameterType="com.the9.qjrun.po.account.Currency">
        delete from currency where pk_id =  #{id,jdbcType=INTEGER}
    </delete>
